# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        # i3status 颜色
        colors = true

        # 刷新间隔
        interval = 1
}

order += "disk /"
order += "disk /home"
order += "load"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "tztime local"

disk "/" {
        # 硬盘已用容量 /
        format = " %percentage_used"
}

disk "/home" {
        # 硬盘已用容量 /home
        format = " %percentage_used"
}

load {
        # 平均负载（1分钟）
        format = " %1min"
        max_threshold = "1.5"
}

wireless _first_ {
        # 无线网络连接状态
        format_up = " %quality %ip"
        format_down = " off"
}

ethernet _first_ {
        # 有线网络连接状态
        format_up = " %ip"
        format_down = " off"
}

volume master {
        # 音量显示
        format = " %volume"
        format_muted = " %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery all {
        # 忽略电池损耗
        last_full_capacity = false

        # 电量报警线（time 或 percentage）
        threshold_type = percentage
        low_threshold = 20

        # 电量及剩余时间显示
        status_chr = " "
        status_bat = " "
        status_unk = "? " 
        status_full = " "
        format = "%status%percentage %remaining"
}

tztime local {
        # 日期和时间
        format = " %Y-%m-%d %H:%M"
}
